% Direct citation environment
\renewenvironment{quotation}{
	\vspace{.5cm}
	\begin{flushright}
		\begin{minipage}{\linewidth - 4cm}
		\singlespacing
		\small
}{
		\end{minipage}
	\end{flushright}
	\vspace{.5cm}
}

% Important definitions environment (box with rounded corners)
\RequirePackage{fancybox}
\newcommand{\worddefinitionboxmargin}{8pt}
\newcommand{\fboxsepdefault}{\fboxsep}
\newcommand{\worddefinition}[1]{
	\begin{center}
		\renewcommand{\fboxsepdefault}{\fboxsep}
		\renewcommand{\fboxsep}{\wordefinitionboxmargin}
		\vspace{.5cm}
		\ovalbox{\parbox{\linewidth - 2.5cm}{#1}}
		\vspace{.5cm}
		\renewcommand{\fboxsep}{\fboxsepdefault}
	\end{center}
}
