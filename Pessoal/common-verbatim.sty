\RequirePackage{textcomp} % Required by upquote option.
\RequirePackage{listings}

% Default settings for listings
\lstset{extendedchars=true}
\lstset{upquote=false}
\lstset{basicstyle=\scriptsize}
\lstset{tabsize=4}
\lstset{frame=single}
\lstset{frameround=tttt}
\lstset{aboveskip=16pt}
\lstset{belowskip=6pt}
\lstset{xleftmargin=\floatmargin}
\lstset{xrightmargin=\floatmargin}
\lstset{resetmargins=true}
\lstset{float}
\lstset{captionpos=b}

% Define um subconjunto da linguagem HyperTalk.
\lstdefinelanguage{hypertalk}{
	morekeywords={goto},
	sensitive=false,
	morecomment=[l]{//},
	morecomment=[s]{/*}{*/},
	morestring=[b]",
}

\lstdefinelanguage{diff}{
    morekeywords={+, -},
    sensitive=false,
    morecomment=[l]{//},
    morecomment=[s]{/*}{*/},
    morecomment=[l]{+},
    morecomment=[l]{-},
    morestring=[b]",
}



% Macro utilizada para trechos de código-fonte inseridos no meio do texto.
\RequirePackage[obeyspaces]{url}
\newcommand\srccode[1]{\url{#1}}%

