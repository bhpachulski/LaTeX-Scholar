\RequirePackage{ifthen}
\newboolean{numericbib}
\setboolean{numericbib}{false}

\DeclareOption{abnt-alf}{
	\setboolean{numericbib}{false}
}
\DeclareOption{abnt-num}{
	\setboolean{numericbib}{true}
}
\ProcessOptions*

% Adequação das citações e referências a norma ABNT
\ifthenelse{\boolean{numericbib}}{
	\RequirePackage[alf,abnt-url-package=url]{abntcite}
}{
	\RequirePackage[num,abnt-url-package=url]{abntcite}
}

