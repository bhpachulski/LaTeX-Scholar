
% Definição do posicionamento padrão das tabelas e figuras
\RequirePackage{float}
% \floatstyle{plaintop}
\restylefloat*{table}

% \floatstype{plain}
\restylefloat*{figure}

\floatplacement{table}{!htb}
\floatplacement{figure}{!htb}


% Otimização no espaço ocupado por floats
%
\newcommand{\floatmargin}{.3cm}
% Space left between floats
\renewcommand{\floatsep}{8pt}
% Space left on top and bottom of an in-text float.
\renewcommand{\intextsep}{12pt}
% Space between last top float or first bottom float and the text.
\renewcommand{\textfloatsep}{12pt}


